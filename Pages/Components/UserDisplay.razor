@using Shared.Data

<a class="uc-usercard" href="/@User.username">
    <div class="usercard-img">
        <div class="userprofile">
            <UserProfile></UserProfile>
        </div>
    </div>
    <div class="userprofile-data">
        <span class="semibold">@User.username</span>
        <span class="text-muted">@User.name</span>
    </div>

    @if (NeedData)
    {
        <div class="userprofile-actions">
            <button class="btn btn-link text-decoration-none" enabled>
                <span>Seguir</span>
            </button>
        </div>
    }

</a>

@code {
    [Parameter]
    public UserSearch User { get; set; }
    [Parameter]
    public bool NeedData { get; set; } = false;


}
