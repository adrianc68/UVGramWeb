@page "/{username}/" 
@inject NavigationManager __nav

<UVGramWeb.Shared.Components.Topbar.Topbar></UVGramWeb.Shared.Components.Topbar.Topbar>
<div class="profile">
    <div class="profile-content">
        <section class="profile-userdata">
            <header class="profile-data">
                <div class="userprofile">
                    <div class="userprofile-img">
                        <UVGramWeb.Shared.Components.UserProfile.UserProfile></UVGramWeb.Shared.Components.UserProfile.UserProfile>
                    </div>
                </div>
                <div class="profile-description">
                    <div class="profile-a-container">
                        <div class="profile-a-username">
                            <h2>@Username</h2>
                        </div>
                        <div class="profile-desc-actions">
                            <div>
                                <button class="btn border" @onclick="@(() => __nav.NavigateTo("/accounts/edit"))">Editar perfil</button>
                            </div>
                            <div>
                                <button class="btn border">Seguir</button>
                            </div>
                            <div>
                                <button class="btn border">Bloquear</button>
                            </div>
                            <div>
                                <button class="btn border">Reportar</button>
                            </div>
                        </div>
                    </div>
                    <div class="profile-b-container">
                        <div class="profile-indicators">
                            <span class="profile-publications-span"><strong class="semibold">69</strong>
                                publicaciones</span>
                            <div class="pf-followers">
                                <button class="border-0 bg-transparent"
                                    @onclick="@(() => ShowFollowersToolTip = !ShowFollowersToolTip)">
                                    <span class="profile-followers-span"><strong class="semibold">15.5k</strong>
                                        seguidores</span>
                                </button>
                                @if (ShowFollowersToolTip)
                                {
                                    <div class="notsqr"></div>
                                    <UVGramWeb.Pages.Profile.Followers.Followers>
                                    </UVGramWeb.Pages.Profile.Followers.Followers>
                                }

                            </div>
                            <div class="pf-following">
                                <button class="border-0 bg-transparent"
                                    @onclick="@(() => ShowFollowingToolTip = !ShowFollowingToolTip)">
                                    <span class="profile-followed-span"><strong class="semibold">290</strong>
                                        seguidos</span>
                                </button>
                                @if (ShowFollowingToolTip)
                                {
                                    <div class="notsqr"></div>
                                    <UVGramWeb.Pages.Profile.Following.Following>
                                    </UVGramWeb.Pages.Profile.Following.Following>

                                }

                            </div>
                        </div>
                    </div>
                    <div class="profile-c-container">
                        <span class="profile-name-span semibold">Roberto Perez Salazar </span>
                        <p class="muted-text">soy Youtuber a veces<br>
                            Mi emprendimiento: @@bausgrafica</p>
                    </div>
                </div>
            </header>
            <div class="profile-histories">
                <ul>
                    <li>
                        <UVGramWeb.Shared.Components.HistoriesCard.Histories></UVGramWeb.Shared.Components.HistoriesCard.Histories>
                    </li>
                    <li>
                        <UVGramWeb.Shared.Components.HistoriesCard.Histories></UVGramWeb.Shared.Components.HistoriesCard.Histories>
                    </li>
                    <li>
                        <UVGramWeb.Shared.Components.HistoriesCard.Histories></UVGramWeb.Shared.Components.HistoriesCard.Histories>
                    </li>
                    <li>
                        <UVGramWeb.Shared.Components.HistoriesCard.Histories></UVGramWeb.Shared.Components.HistoriesCard.Histories>
                    </li>

                </ul>
            </div>
        </section>
        <article class="profile-publications">
            <UVGramWeb.Pages.Profile.PublicationProfile.PublicationProfile />
            <UVGramWeb.Pages.Profile.PublicationProfile.PublicationProfile />
            <UVGramWeb.Pages.Profile.PublicationProfile.PublicationProfile />
            <UVGramWeb.Pages.Profile.PublicationProfile.PublicationProfile />
            <UVGramWeb.Pages.Profile.PublicationProfile.PublicationProfile />
            <UVGramWeb.Pages.Profile.PublicationProfile.PublicationProfile />
            <UVGramWeb.Pages.Profile.PublicationProfile.PublicationProfile />

        </article>
    </div>
</div>


@code {
    [Parameter]
    public String? Username { get; set; }

    public bool ShowFollowersToolTip = false;

    public bool ShowFollowingToolTip = false;

}