@page "/accounts/verification/url/change_password"
@inject NavigationManager NavigationManager
@using UVGramWeb.Services;
@inject IHttpService httpService
@using System.Net;

@code {
    protected override void OnInitialized()
    {
        var querystring = NavigationManager.QueryString();
        string uuid = WebUtility.UrlEncode(querystring["uuid"]);
        string id = WebUtility.UrlEncode(querystring["id"]);
        string data = WebUtility.UrlEncode(querystring["data"]);
        var dataUri = $"uuid={uuid}&id={id}&data={data}";
        string redirectUri = $"/accounts/password/reset/confirmation?{dataUri}";
        NavigationManager.NavigateTo(redirectUri);
    }
}
