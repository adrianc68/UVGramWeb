@page "/inbox"

<UVGramWeb.Shared.Topbar.Topbar></UVGramWeb.Shared.Topbar.Topbar>
<div class="inbox">
    <div class="inbox-container card">
        <section class="inbox-messages">
            <div class="inbox-header border-bottom">
                <span class="semibold">Mensajes</span>
                <div class="inbox-send-action">
                    <button @onclick="@(() => ShowSendMessageBox = !ShowSendMessageBox)">
                        <svg aria-label="Nuevo mensaje" class="_8-yf5 " color="#262626" fill="#262626" height="24"
                            role="img" viewBox="0 0 24 24" width="24">
                            <path d="M12.202 3.203H5.25a3 3 0 00-3 3V18.75a3 3 0 003 3h12.547a3 3 0 003-3v-6.952"
                                fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                stroke-width="2"></path>
                            <path
                                d="M10.002 17.226H6.774v-3.228L18.607 2.165a1.417 1.417 0 012.004 0l1.224 1.225a1.417 1.417 0 010 2.004z"
                                fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                stroke-width="2"></path>
                            <line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                stroke-width="2" x1="16.848" x2="20.076" y1="3.924" y2="7.153"></line>
                        </svg>
                    </button>
                    @if (ShowSendMessageBox)
                    {
                        <div class="notsqr"></div>

                        <div class="sendmessage-tooltip shadow">
                            <UVGramWeb.Pages.Inbox.SendMessage.SendMessage></UVGramWeb.Pages.Inbox.SendMessage.SendMessage>
                        </div>
                    }
                </div>

            </div>
            <div class="inbox-messagescards">
                <ul>
                    <li>
                        <UVGramWeb.Shared.MessageCard.MessageCard></UVGramWeb.Shared.MessageCard.MessageCard>
                    </li>
                    <li>
                        <UVGramWeb.Shared.MessageCard.MessageCard></UVGramWeb.Shared.MessageCard.MessageCard>
                    </li>
                    <li>
                        <UVGramWeb.Shared.MessageCard.MessageCard></UVGramWeb.Shared.MessageCard.MessageCard>
                    </li>
                    <li>
                        <UVGramWeb.Shared.MessageCard.MessageCard></UVGramWeb.Shared.MessageCard.MessageCard>
                    </li>
                </ul>
            </div>
        </section>
        <section class="inbox-chat border-start">
            <UVGramWeb.Pages.Inbox.Chat.Chat></UVGramWeb.Pages.Inbox.Chat.Chat>
        </section>
    </div>
</div>

@code {
    public bool ShowSendMessageBox = false;
}